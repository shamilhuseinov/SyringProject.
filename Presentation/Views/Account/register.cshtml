@using Business.ViewModels.User.Account
@model AccountRegisterVM

    <!-- main starts -->
<main>
    <!-- main-frame section starts -->
    <section class="main-frame-2 no-select" style="background-image: url(assets/images/cart-frame.jpg);">
        <div class="main-frame-2-title">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="main-frame-2-title-text custom-title-text">
                            Register
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="main-frame-2-breadcrumb">
                            Home / Register
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- main-frame section ends -->
    <!-- product-table section starts -->
    <section class="register my-5 no-select">
        <div class="container">
            <form action="" class="register-form">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Mobile">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Confirm password">
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary">Register</button>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <div>
                        <span>Already have an account?</span> <a href="login.html">Login now</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- product-table section ends -->


</main>
<!-- main ends -->