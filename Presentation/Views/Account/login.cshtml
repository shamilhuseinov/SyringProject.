@using Business.ViewModels.User.Account
@model AccountLoginVM
        <!-- main starts -->
<main>
    <!-- main-frame section starts -->
    <section class="main-frame-2 no-select" style="background-image: url(assets/images/cart-frame.jpg);">
        <div class="main-frame-2-title">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="main-frame-2-title-text custom-title-text">
                            Login
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="main-frame-2-breadcrumb">
                            Home / Login
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- main-frame section ends -->
    <!-- product-table section starts -->
    <section class="login my-5 no-select">
        <div class="container">
            <form action="" class="login-form">
                <div class="form-group">
                    <input asp-for="Username" class="form-control" type="text" placeholder="Username">
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button asp-action="login" asp-controller="account" class="btn btn-primary">Login</button>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <div>
                        <span>Don't have account yet?</span> <a asp-action="register" asp-controller="account" href="register.html">Register now</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- product-table section ends -->


</main>
<!-- main ends -->